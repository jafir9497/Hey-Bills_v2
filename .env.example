# =============================================================================
# Hey-Bills v2 - Root Environment Configuration
# =============================================================================
# This is the main environment file for the entire Hey-Bills project
# Copy this file to .env and configure with your actual values
# This file contains project-wide variables used by multiple services

# Project Information
PROJECT_NAME=Hey-Bills
PROJECT_VERSION=2.0.0
PROJECT_DESCRIPTION=Intelligent Receipt and Warranty Management System
PROJECT_AUTHOR=Hey-Bills Team
PROJECT_LICENSE=MIT

# ============================================================================
# CORE SUPABASE CONFIGURATION (Required for all services)
# ============================================================================

# Supabase Project Configuration
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_PROJECT_ID=your-project-ref
SUPABASE_REGION=us-east-1

# ============================================================================
# AUTHENTICATION
# ============================================================================

# Google OAuth (for Google Sign-In)
GOOGLE_CLIENT_ID=your-google-client-id.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=30d

# ============================================================================
# AI & ML SERVICES (Shared across frontend and backend)
# ============================================================================

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORG_ID=your-openai-org-id
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# OpenRouter API (Alternative AI Service)
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-api-key-here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet
OPENROUTER_MODEL_FALLBACK=openai/gpt-4-turbo-preview
OPENROUTER_APP_NAME=Hey Bills
OPENROUTER_APP_URL=https://heybills.com

# Google AI Services
GOOGLE_VISION_API_KEY=your-google-vision-api-key
GOOGLE_APPLICATION_CREDENTIALS=path/to/google-service-account.json

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

# Environment
NODE_ENV=development
PORT=3000
HOST=localhost

# URLs
API_BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173
SUPABASE_STORAGE_URL=https://your-project-id.supabase.co/storage/v1

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,capacitor://localhost

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# Database Connection (usually same as SUPABASE_URL with different port)
DATABASE_URL=postgresql://postgres:password@localhost:5432/hey_bills
DB_MAX_CONNECTIONS=20

# ============================================================================
# FILE STORAGE & UPLOADS
# ============================================================================

# File Upload Limits
MAX_FILE_SIZE=10MB

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Core Features
ENABLE_OCR=true
ENABLE_VECTOR_SEARCH=true
ENABLE_ANALYTICS=true
ENABLE_LOCATION_TRACKING=false
ENABLE_PUSH_NOTIFICATIONS=true

# ============================================================================
# MONITORING & LOGGING
# ============================================================================

# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Logging
LOG_LEVEL=debug
ENABLE_HEALTHCHECK=true

# ============================================================================
# RATE LIMITING
# ============================================================================

# Rate Limit Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# ============================================================================
# FIREBASE PUSH NOTIFICATIONS (Shared Configuration)
# ============================================================================

# Firebase Project Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key-multiline
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_CLIENT_ID=your-client-id

# Firebase Cloud Messaging
FCM_SENDER_ID=123456789012
FCM_VAPID_KEY=your-firebase-vapid-key
FIREBASE_SERVER_KEY=your-firebase-server-key

# Firebase App IDs (platform-specific)
FIREBASE_APP_ID_ANDROID=1:123456789012:android:abcdef123456789
FIREBASE_APP_ID_IOS=1:123456789012:ios:abcdef123456789
FIREBASE_APP_ID_WEB=1:123456789012:web:abcdef123456789

# Email Service Configuration
EMAIL_SERVICE_API_KEY=your-email-service-api-key
FROM_EMAIL=noreply@heybills.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587

# ============================================================================
# THIRD-PARTY INTEGRATIONS
# ============================================================================

# Analytics
GOOGLE_ANALYTICS_ID=GA-MEASUREMENT-ID

# Social Media Login (Future)
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

APPLE_CLIENT_ID=your-apple-client-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY=your-apple-private-key

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Development Database Reset
RESET_DATABASE_ON_START=false

# Mock Services (for development without external dependencies)
MOCK_OCR_SERVICE=false
MOCK_EMBEDDING_SERVICE=false
MOCK_NOTIFICATION_SERVICE=false

# Debug Settings
DEBUG_SQL_QUERIES=false
ENABLE_REQUEST_LOGGING=true

# ============================================================================
# SECURITY
# ============================================================================

# Security Headers
ENABLE_SECURITY_HEADERS=true
ENABLE_CORS=true
ENABLE_HELMET=true

# Session Security
SECURE_COOKIES=true
SAME_SITE_COOKIES=strict

# ============================================================================
# PERFORMANCE
# ============================================================================

# Caching
ENABLE_REDIS_CACHE=false
REDIS_URL=redis://localhost:6379

# Compression
ENABLE_COMPRESSION=true

# ============================================================================
# MOBILE APP CONFIGURATION
# ============================================================================

# Deep Link URLs
ANDROID_PACKAGE_NAME=com.heybills.app
IOS_BUNDLE_ID=com.heybills.app
DEEP_LINK_SCHEME=heybills

# App Store URLs
ANDROID_APP_URL=https://play.google.com/store/apps/details?id=com.heybills.app
IOS_APP_URL=https://apps.apple.com/app/hey-bills/id123456789

# ============================================================================
# DEPLOYMENT SPECIFIC
# ============================================================================

# Build Configuration
BUILD_ENV=development
VERSION=1.0.0
BUILD_NUMBER=1

# CDN (for production)
CDN_URL=https://cdn.heybills.com

# Static Assets
STATIC_ASSETS_URL=https://assets.heybills.com